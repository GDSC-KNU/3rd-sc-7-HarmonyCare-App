<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_pattern">

    <fragment
        android:id="@+id/navigation_checklist"
        android:name="com.example.harmonycare.ui.checklist.ChecklistFragment"
        android:label="Checklist"
        tools:layout="@layout/fragment_checklist"/>

    <fragment
        android:id="@+id/navigation_record"
        android:name="com.example.harmonycare.ui.record.RecordFragment"
        android:label="Record"
        tools:layout="@layout/fragment_record"/>

    <fragment
        android:id="@+id/navigation_pattern"
        android:name="com.example.harmonycare.ui.pattern.PatternFragment"
        android:label="Pattern"
        tools:layout="@layout/fragment_pattern"/>

    <fragment
        android:id="@+id/navigation_community"
        android:name="com.example.harmonycare.ui.community.CommunityFragment"
        android:label="Community"
        tools:layout="@layout/fragment_community">
        <action
            android:id="@+id/action_community_detail"
            app:destination="@id/navigation_community_detail" />
    </fragment>

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.harmonycare.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_navigation_profile_to_navigation_mypost"
            app:destination="@id/navigation_mypost" />
    </fragment>

    <fragment
        android:id="@+id/navigation_mypost"
        android:name="com.example.harmonycare.ui.profile.MyPostFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_community">
        <action
            android:id="@+id/action_navigation_mypost_to_navigation_community_detail"
            app:destination="@id/navigation_community_detail" />
    </fragment>

    <fragment
        android:id="@+id/navigation_community_detail"
        android:name="com.example.harmonycare.ui.community.CommunityDetailFragment"
        tools:layout="@layout/fragment_community_detail">
        <argument
            android:name="communityId"
            app:argType="integer" />
        <argument
            android:name="title"
            app:argType="string" />
        <argument
            android:name="content"
            app:argType="string" />
    </fragment>

</navigation>